<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/note_text"
        android:layout_width="220dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="write your notes ...ðŸ˜‰."
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="74dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        app:icon="@drawable/baseline_update_24"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:iconSize="30dp"
        app:iconTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/delete_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="53dp"
        android:layout_height="39dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        app:icon="@drawable/baseline_delete_24"
        app:iconGravity="textStart"
        app:iconPadding="2dp"
        app:iconSize="30dp"
        app:iconTint="#F44336"
        app:layout_constraintBottom_toBottomOf="@+id/update_button"
        app:layout_constraintStart_toEndOf="@+id/note_text"
        app:layout_constraintTop_toTopOf="@+id/update_button"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
